#
# ~/.bashrc
#

# Set command prompt
export PS1="[\[\e[36m\]\t\[\e[m\]]-[\[\e[32m\]\u\[\e[m\]\[\e[32m\]@\[\e[m\]\[\e[32m\]\h\[\e[m\]]-[\[\e[35m\]\W\[\e[m\]]\n\\$> "

# Enable dynamic line wrap
shopt -s checkwinsize

# User Aliases
alias ..='cd ..'
alias ...='cd ..; cd ..'
alias ....='cd ..; cd ..; cd ..'
alias c='clear'
alias e='"$EDITOR"'
alias g='cd'
alias l='ls --color=auto'
alias ll='ls -lh --color=auto'
alias lll='ls -lAh --color=auto'
alias q='exit'
alias r='cd "$OLDPWD"'
